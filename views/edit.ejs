<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    Edit <%= blog.title %>
  </div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="Blog[title]" value="<%= blog.title %>">
    </div>

    <div class="field">
      <label>Image</label>
      <input type="text" name="Blog[image]" value="<%= blog.image %>">
    </div>

    <div class="field">
      <label>Article</label>
      <textarea name="Blog[body]" rows="8" cols="40"><%= blog.body %></textarea>
    </div>

    <input type="submit" class="ui violet big inverted button">
  </form>
</div>


<% include partials/footer %>
